<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_weight="1"/>
         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:scaleType="fitCenter"
             android:src="@drawable/ic_account_detail_orange"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:orientation="vertical">
        <!--region Detail Nama-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:paddingTop="5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_account_detail_name_orange"
                android:layout_alignParentTop="true"
                android:id="@+id/img_view_name_detail"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_view_name_detail"
                android:text="Nama"
                android:id="@+id/et_nama_detail"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_view_name_detail"
                android:text="Faiz Ainur Rofiq"
                android:layout_below="@+id/et_nama_detail"
                android:textSize="20sp"/>
        </RelativeLayout>
        <!--endregion-->
        <!--region Detail No.HP-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:paddingTop="5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_account_detail_name_orange"
                android:layout_alignParentTop="true"
                android:id="@+id/img_view_nohp_detail"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_view_nohp_detail"
                android:text="No.HP"
                android:id="@+id/et_nohp_detail"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_view_nohp_detail"
                android:text="081369874562"
                android:layout_below="@+id/et_nohp_detail"
                android:textSize="20sp"/>
        </RelativeLayout>
        <!--endregion-->
        <!--region Detail Gender-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:paddingTop="5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_account_detail_name_orange"
                android:layout_alignParentTop="true"
                android:id="@+id/img_view_gender_detail"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_view_gender_detail"
                android:text="Gender"
                android:id="@+id/et_gender_detail"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_view_gender_detail"
                android:text="Pria"
                android:layout_below="@+id/et_gender_detail"
                android:textSize="20sp"/>
        </RelativeLayout>
        <!--endregion-->
        <!--region Detail Jenjang Pendidikan-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:paddingTop="5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_account_detail_name_orange"
                android:layout_alignParentTop="true"
                android:id="@+id/img_view_jenjang_detail"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_view_jenjang_detail"
                android:text="Jenjang Pendidikan"
                android:id="@+id/et_jenjang_detail"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_view_jenjang_detail"
                android:text="S1 Sarjana"
                android:layout_below="@+id/et_jenjang_detail"
                android:textSize="20sp"/>
        </RelativeLayout>
        <!--endregion-->
        <!--region Detail Hobi-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:paddingTop="5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_account_detail_name_orange"
                android:layout_alignParentTop="true"
                android:id="@+id/img_view_hobi_detail"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_view_hobi_detail"
                android:text="Hobi"
                android:id="@+id/et_hobi_detail"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_view_hobi_detail"
                android:text="Main"
                android:layout_below="@+id/et_hobi_detail"
                android:textSize="20sp"/>
        </RelativeLayout>
        <!--endregion-->
        <!--region Alamat-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:paddingTop="5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_account_detail_name_orange"
                android:layout_alignParentTop="true"
                android:id="@+id/img_view_alamat_detail"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_view_alamat_detail"
                android:text="Nama"
                android:id="@+id/et_alamat_detail"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_view_alamat_detail"
                android:text="Alamat"
                android:layout_below="@+id/et_alamat_detail"
                android:textSize="20sp"/>
        </RelativeLayout>
        <!--endregion-->
    </LinearLayout>
</LinearLayout>